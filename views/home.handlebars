<style>
  body{
    margin: 0;
  }
  .container{
    width: 1240px;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
  }
  .divBlock{
    margin: 10px;
    width: 600px;
  }

  .title{
    font-size: 20px;
    font-weight: bold;
  }
  .img_News{
    width: 100%;
  }
</style>


<div class="container">

{{#each news}}

  <div class="divBlock">

  <img class="img_News" src="{{imgUrl}}" alt="">

  <a class="title" href="/news/{{_id}}">{{title}}</a>

  </div>
{{/each}}

</div>